::-webkit-scrollbar { /* 滚动条组件 */
  width: 5px;
  height: 5px;
}
::-webkit-scrollbar-thumb { /* 滚动条 */
  border-radius: 3px;
  background: #ddd;
  box-shadow: inset 0 0 1px rgba(0,0,0,0.2);
}
::-webkit-scrollbar-track { /* 轨道 */
  border-radius: 3px;
  background: none;
  box-shadow: inset 0 0 1px rgba(0,0,0,0.2);
}

